<view class="container">
  <view class="userinfo">
    <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
</view>
<view class="weui-panel">
  <view class="weui-panel__bd">
    <view class="weui-media-box weui-media-box_small-appmsg">
      <view class="weui-cells weui-cells_in-small-appmsg">
        <navigator url="../userinfo/userinfo" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image src="../../images/userinfo.png" style="width: 20px;height: 20px;margin-right: 5px;margin-top:5px;" />
          </view>
          <view class="weui-cell__bd weui-cell_primary">
            <view>个人信息</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image src="../../images/myArticle.png" style="width: 20px;height: 20px;margin-right: 5px;margin-top:5px;" />
          </view>
          <view class="weui-cell__bd weui-cell_primary">
            <view style="text-align:left">我的文章</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image src="../../images/collection.png" style="width: 20px;height: 20px;margin-right: 5px;margin-top:5px;" />
          </view>
          <view class="weui-cell__bd weui-cell_primary">
            <view>收藏记录</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
      </view>
    </view>
  </view>
</view>